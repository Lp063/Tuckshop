version: '3.1'
services:  
  db:
    image: mysql
    restart: on-failure
    environment:
      #DB_MYSQL_USER: tuckshop
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: tuckshop
    volumes:
       - tuckshop-mysql-data:/var/lib/mysql
       - tuckshop-mysql-config:/etc/mysql
       - ./db/backup/files/:/data_backup/data
       - ./tuckshop.sql:/docker-entrypoint-initdb.d/tuckshop.sql
    ports:
      - "3308:3306"
  phpmyadmin:
    image: phpmyadmin/phpmyadmin:latest
    restart: always
    environment:
      PMA_HOST: db
      PMA_USER: root
      PMA_PASSWORD: root
    ports:
      - "8080:80"
    links:
      - db
  api:
    restart: always
    depends_on: 
      - db
    build:
      context: ./api
      dockerfile: dockerfile
    environment:
      TEST: ONEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEE
    links:
      - db
  client:
    restart: on-failure
    depends_on: 
      - api
    build:
      context: ./client
      dockerfile: dockerfile
volumes:
  tuckshop-mysql-data:
  tuckshop-mysql-config: